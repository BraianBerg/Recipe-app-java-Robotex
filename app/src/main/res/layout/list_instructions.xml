<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/appbackground"
    app:cardElevation="@dimen/margin8dp"
    android:layout_margin="@dimen/margin8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_instruction_name"
            android:text="@string/instructions"
            android:textColor="@color/apptextcolor"
            android:textAlignment="center"
            android:textSize="@dimen/testSize18sp"
            android:padding="@dimen/margin8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_instruction_steps"
            android:layout_margin="@dimen/margin4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>